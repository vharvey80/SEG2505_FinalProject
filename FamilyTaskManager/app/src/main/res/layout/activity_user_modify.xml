<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="familytaskmanager.microso.com.familytaskmanager.UserModifyActivity">

    <!-- Master stack layout for entire view -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <!-- User view -->
            <TextView
                android:id="@+id/title_modify_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modifying user" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/userIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="User Name"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_edit_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="First name" />

                <EditText
                    android:id="@+id/edit_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Enter first name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_edit_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Last name" />

                <EditText
                    android:id="@+id/edit_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Enter last name" />

            </LinearLayout>

            <TextView
                android:id="@+id/title_choose_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose a picture" />

            <GridLayout
                android:id="@+id/grid_pictures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:columnCount="3"
                android:rowCount="3">

                <ImageButton
                    android:id="@+id/select_man1"
                    android:layout_width="@dimen/icon_select_side"
                    android:layout_height="@dimen/icon_select_side"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/man1" />

                <ImageButton
                    android:id="@+id/select_man2"
                    android:layout_width="@dimen/icon_select_side"
                    android:layout_height="@dimen/icon_select_side"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/man2" />

                <ImageButton
                    android:id="@+id/select_man3"
                    android:layout_width="@dimen/icon_select_side"
                    android:layout_height="@dimen/icon_select_side"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/man3" />

                <ImageButton
                    android:id="@+id/select_man4"
                    android:layout_width="@dimen/icon_select_side"
                    android:layout_height="@dimen/icon_select_side"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/man4" />

                <ImageButton
                    android:id="@+id/select_man5"
                    android:layout_width="@dimen/icon_select_side"
                    android:layout_height="@dimen/icon_select_side"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/man5" />

                <ImageButton
                    android:id="@+id/select_woman1"
                    android:layout_width="@dimen/icon_select_side"
                    android:layout_height="@dimen/icon_select_side"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/woman1" />

                <ImageButton
                    android:id="@+id/select_woman2"
                    android:layout_width="@dimen/icon_select_side"
                    android:layout_height="@dimen/icon_select_side"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/woman2" />

                <ImageButton
                    android:id="@+id/select_woman3"
                    android:layout_width="@dimen/icon_select_side"
                    android:layout_height="@dimen/icon_select_side"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/woman3" />

                <ImageButton
                    android:id="@+id/select_woman4"
                    android:layout_width="@dimen/icon_select_side"
                    android:layout_height="@dimen/icon_select_side"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/woman4" />
            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/submitChangedUser"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Submit"
                    android:visibility="visible"

                    />

                <Button
                    android:id="@+id/cancelChangedUser"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@android:string/cancel" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
